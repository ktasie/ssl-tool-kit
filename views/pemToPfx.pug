extends base

block content
    // Content Start
    script(src='./assets/jszip.min.js')
    script(src='./assets/FileSaver.min.js')
    #custom_content.col-lg-6.custom-content
        h1 
            i.fa-solid.fa-gears
            |  PEM to PKCS#12
        h3.mt-3.mb-3
            | The goal of this tool is to provide web GUI for basic x509v3 certificates conversion operations.
        p#cmd
        form#convertForm(method='post' enctype='multipart/form-data')
            label Attach Certificate File *
                .form-upload
                    i.fa-solid.fa-paperclip
                    span.bold  Add file         
                    input.form-upload__input(type='file' name='certificate')
            #certificate.form-upload_file No file chosen
            br
            label Attach Unencrypted Key File *
                .form-upload
                        i.fa-solid.fa-paperclip
                        span.bold  Add file            
                        input.form-upload__input(type='file' name='key')
            #key.form-upload_file No file chosen
            br
            label Password *
            input#domains.form-control.mt-2(type='password' placeholder='Type a password' name='password')
            span.helper-text Password protect the generated pfx file
            hr
            button#btn_generate_ssl.custom-button.w-100.mt-2 
                i.fa-solid.fa-gears.fa-beat
                | Convert


    // Content End
    script(src='./assets/convert.js' type='module')